.item-wrap {
  position: relative;
}
.item-wrap .item {
  position: absolute;
  width: 100%;
  z-index: 1;
}
.item-wrap .item.itemTransition {
  transition: transform 0.3s;
}
.item-wrap .item.zIndex {
  z-index: 2;
}
.item-wrap .item.cur {
  background: #efefef;
  transition: initial;
}
.item-wrap .item.fixed {
  z-index: 0 !important;
}

.info {
  position: relative;
  padding-top: 100%;
  background: #ffffff;
}
.info > view {
  position: absolute;
  border: 1rpx solid #ebedf0;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  padding: 10rpx;
  box-sizing: border-box;
}
.info > view image {
  width: 100%;
  height: 100%;
}
.info .plus {
  width: 100%;
  height: 100%;
  background: #efefef;
}
.info .plus:before {
  position: absolute;
  content: "";
  width: 50%;
  height: 2px;
  top: 50%;
  left: 50%;
  margin-top: -1px;
  margin-left: -25%;
  background: #cbcbcb;
}
.info .plus:after {
  position: absolute;
  content: "";
  width: 2px;
  height: 50%;
  top: 50%;
  left: 50%;
  margin-top: -25%;
  margin-left: -1px;
  background: #cbcbcb;
}

.indicator {
  position: fixed;
  z-index: 99999;
  right: 0rpx;
  top: 50%;
  margin-top: -250rpx;
  padding: 20rpx;
}
.indicator > view {
  width: 36rpx;
  height: 500rpx;
  background: #ffffff;
  border-radius: 30rpx;
  box-shadow: 0 0 10rpx -4rpx rgba(0, 0, 0, 0.5);
  color: #3F82FD;
  padding-top: 90rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  text-align: center;
  opacity: 0.8;
}
