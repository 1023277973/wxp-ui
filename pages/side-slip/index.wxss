page {
  padding-bottom: 1rpx;
}

.cells {
  background: #ffffff;
  margin: 20rpx 0;
}

side-slip:not(:last-child) .cell {
  border-bottom: 1rpx solid #ebedf0;
}

.cell {
  display: flex;
  padding: 30rpx;
}
.cell__hd {
  font-size: 0;
}
.cell__hd image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 4rpx;
  margin-right: 30rpx;
}
.cell__bd {
  flex: 1;
}
.cell__bd .name {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-all;
  margin-bottom: 32rpx;
  font-size: 32rpx;
}
.cell__bd .des {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-all;
  color: #666666;
}
